{
  "root": true,
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-secrets/no-secrets": ["error", {
      "ignoreContent": [
        "^[A-Za-z0-9+/=]+$", // base64-encoded strings
        "^[A-Fa-f0-9]+$",     // hex strings
        "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$" // UUIDs
      ]
    }],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]
  },
  "plugins": ["no-secrets"],
  "overrides": [
    {
      "files": ["**/*.test.js", "**/test-*.js", "**/scripts/*.js"],
      "rules": {
        "no-secrets/no-secrets": "off"
      }
    }
  ]
}
