# Example environment variables for Credit Score Dashboard Backend

# --- Database ---
MONGODB_URI=

# --- JWT & Session ---
JWT_SECRET=
SESSION_SECRET=
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30
COOKIE_SECRET=

# --- Email (SMTP) ---
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
EMAIL_FROM=

# --- CORS ---
CORS_ORIGINS=http://localhost:3000

# --- App Settings ---
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
API_PREFIX=/api/v1

# --- Security ---
SKIP_EMAIL_VERIFICATION=false
REQUIRE_EMAIL_VERIFICATION=true
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Admin123!
ADMIN_NAME=System Administrator
PASSWORD_RESET_EXPIRE=3600000

# --- Rate Limiting ---
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# --- File Uploads ---
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# --- Logging ---
LOG_LEVEL=info
LOG_FORMAT=combined

# --- Frontend URL ---
FRONTEND_URL=http://localhost:3000

# --- OpenAI (Optional) ---
OPENAI_API_KEY=

# --- Other Feature Flags ---
SKIP_SMTP_VERIFY=true

# Add any other required variables below